	number = {1},
	journaltitle = {Journal of Molecular Biology},
	shortjournal = {J. Mol. Biol.},
	author = {Hannenhalli, S. S. and Russell, R. B.},
	date = {2000-10-13},
	pmid = {11021970},
	keywords = {Algorithms, Amino Acid Sequence, Animals, Computational Biology, Humans, Models, Molecular, Molecular Sequence Data, Protein Conformation, Software, Structure-Activity Relationship, Proteins, Sequence Alignment, Substrate Specificity, Adenylyl Cyclases, Databases as Topic, Entropy, Guanylate Cyclase, L-Lactate Dehydrogenase, Malate Dehydrogenase, Protein Kinases, Sensitivity and Specificity, Serine Endopeptidases}
